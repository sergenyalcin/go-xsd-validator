<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="PhoneNumber">
        <xs:simpleType>
            <xs:restriction base="xs:string">
                <xs:pattern value="\+\d{1,3}-\d{3}-\d{3}-\d{4}"/>
            </xs:restriction>
        </xs:simpleType>
    </xs:element>
</xs:schema>